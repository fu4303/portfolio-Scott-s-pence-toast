{
  "name": "toast.scottspence.com",
  "version": "0.0.1",
  "type": "module",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "name": "Scott Spence",
    "email": "yo@scottspence.dev",
    "url": "https://scottspence.com"
  },
  "scripts": {
    "dev": "npm run build && npm run serve",
    "postinstall": "breadbox --dest public/web_modules",
    "build": "npm run build:css && npm run build:site",
    "build:css": "postcss --config legacy-commonjs index.css --output public/styles.css",
    "build:site": "toast incremental .",
    "serve": "serve public",
    "clean": "rm -rf public .tmp"
  },
  "dependencies": {
    "@sector/breadbox": "^0.0.4",
    "@toastdotdev/mdx": "^0.1.5",
    "autoprefixer": "^10.2.5",
    "gray-matter": "^4.0.2",
    "parse-numeric-range": "^1.2.0",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "preact": "^10.5.12",
    "preact-render-to-string": "^5.1.15",
    "prism-react-renderer": "^1.2.0",
    "prismjs": "^1.23.0",
    "react-live": "^2.2.3",
    "rehype-local-image-to-cloudinary": "^1.0.4",
    "rehype-slug": "^4.0.1",
    "remark-external-links": "^8.0.0",
    "tailwindcss": "^2.0.3",
    "toast": "^0.3.43",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "serve": "^11.3.2"
  },
  "snowpack": {
    "exclude": [
      "public/**/*",
      "toast.js",
      "data/fetch-mdx-posts.js"
    ],
    "installOptions": {
      "alias": {
        "react": "preact/compat"
      }
    },
    "knownEntrypoints": [
      "preact/hooks",
      "preact",
      "@mdx-js/preact"
    ]
  }
}
