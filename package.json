{
  "name": "toast.scottspence.com",
  "version": "0.0.1",
  "type": "module",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "name": "Scott Spence",
    "email": "yo@scottspence.dev",
    "url": "https://scottspence.com"
  },
  "scripts": {
    "dev": "npm run build && npm run serve",
    "postinstall": "breadbox --dest public/web_modules",
    "build": "npm run build:css && npm run build:site",
    "build:css": "postcss --config legacy-commonjs index.css -o public/styles.css",
    "build:site": "toast incremental .",
    "serve": "serve public"
  },
  "dependencies": {
    "@sector/breadbox": "^0.0.4",
    "@toastdotdev/mdx": "^0.1.3",
    "postcss": "^8.1.6",
    "postcss-cli": "^8.2.0",
    "tailwindcss": "^1.9.6",
    "toast": "^0.3.30"
  },
  "devDependencies": {
    "serve": "^11.3.2"
  },
  "snowpack": {
    "exclude": [
      "public/**/*",
      "toast.js"
    ],
    "installOptions": {
      "alias": {
        "react": "preact/compat"
      }
    },
    "knownEntrypoints": [
      "preact/hooks",
      "preact"
    ]
  }
}
